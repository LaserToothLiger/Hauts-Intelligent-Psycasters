<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <!--Anomaly cultists-->
  <PawnKindDef ParentName="HoraxianBase">
    <defName>HVPAA_Voidcaster</defName>
    <label>voidcaster</label>
    <combatPower>150</combatPower>
    <apparelAllowHeadgearChance>0</apparelAllowHeadgearChance>
    <studiableAsPrisoner>true</studiableAsPrisoner>
    <isGoodPsychicRitualInvoker>true</isGoodPsychicRitualInvoker>
    <disallowedTraitsWithDegree>
      <PsychicSensitivity>-2</PsychicSensitivity>
    </disallowedTraitsWithDegree>
    <specificApparelRequirements>
      <li>
        <bodyPartGroup>FullHead</bodyPartGroup>
        <requiredTag>HoraxianCeremonial</requiredTag>
        <useRandomStyleDef>true</useRandomStyleDef>
      </li>
      <li>
        <color>(215, 85, 85)</color>
      </li>
      <li>
        <bodyPartGroup>Torso</bodyPartGroup>
        <apparelLayer>OnSkin</apparelLayer>
      </li>
      <li>
        <bodyPartGroup>Legs</bodyPartGroup>
        <apparelLayer>OnSkin</apparelLayer>
      </li>
    </specificApparelRequirements>
    <apparelRequired>
	  <li>Apparel_PsyfocusRobe</li>
    </apparelRequired>
    <weaponTags>
      <li>NerveSpiker</li>
    </weaponTags>
    <weaponMoney>300~500</weaponMoney>
    <startingHediffs>
      <li>
        <def>Tentacle</def>
        <chance>0.2</chance>
      </li>
      <li>
        <def>FleshWhip</def>
        <chance>0.15</chance>
      </li>
      <li>
        <def>FleshmassStomach</def>
        <chance>0.15</chance>
      </li>
      <li>
        <def>FleshmassLung</def>
        <chance>0.15</chance>
      </li>
      <li>
        <def>Voidsight</def>
        <durationTicksRange>60000~300000</durationTicksRange> <!-- 1~5 days -->
      </li>
      <li>
        <def>DeathRefusal</def>
      </li>
    </startingHediffs>
	<missingParts>
      <li>
        <bodyPart>Eye</bodyPart>
      </li>
      <li>
        <bodyPart>Eye</bodyPart>
		<chance>0.65</chance>
      </li>
	</missingParts>
    <xenotypeSet Inherit="False">
      <xenotypeChances>
        <Genie MayRequire="Ludeon.RimWorld.Biotech">0.025</Genie>
        <Neanderthal MayRequire="Ludeon.RimWorld.Biotech">0.025</Neanderthal>
        <Pigskin MayRequire="Ludeon.RimWorld.Biotech">0.025</Pigskin>
        <OldOne MayRequire="ellit.IlkoftheOldOnes">0.025</OldOne>
      </xenotypeChances>
    </xenotypeSet>
	<modExtensions>
	  <li Class="HVPAA.AddedSpecPsycasters">
		<domesticChance>1</domesticChance>
		<pointCost>10</pointCost>
		<domesticCount>1~4</domesticCount>
		<minPsylinkLevel>1~3</minPsylinkLevel>
		<raidChance>0.25</raidChance>
		<raidCount>1~2</raidCount>
	  </li>
	</modExtensions>
  </PawnKindDef>
  <PawnKindDef ParentName="HoraxianBase">
    <defName>HVPAA_Transgressor</defName>
    <label>transgressor</label>
    <combatPower>400</combatPower>
    <apparelAllowHeadgearChance>0</apparelAllowHeadgearChance>
