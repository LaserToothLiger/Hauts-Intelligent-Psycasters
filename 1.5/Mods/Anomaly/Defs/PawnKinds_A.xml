        <requiredTag>HoraxianCeremonial</requiredTag>
        <useRandomStyleDef>true</useRandomStyleDef>
      </li>
      <li>
        <color>(50, 0, 30)</color>
      </li>
      <li>
        <bodyPartGroup>Torso</bodyPartGroup>
        <apparelLayer>OnSkin</apparelLayer>
      </li>
      <li>
        <bodyPartGroup>Legs</bodyPartGroup>
        <apparelLayer>OnSkin</apparelLayer>
      </li>
    </specificApparelRequirements>
    <apparelRequired>
	  <li>Apparel_PsyfocusRobe</li>
    </apparelRequired>
    <weaponMoney>99999</weaponMoney>
    <weaponTags Inherit="False">
      <li>EltexStaff</li>
    </weaponTags>
    <startingHediffs>
      <li>
        <def>Voidsight</def>
        <durationTicksRange>60000~300000</durationTicksRange>
      </li>
	  <li>
        <def>HVPAA_VoidShield</def>
        <durationTicksRange>60000~300000</durationTicksRange>
	  </li>
      <li>
        <def>DeathRefusal</def>
      </li>
    </startingHediffs>
	<missingParts>
      <li>
        <bodyPart>Eye</bodyPart>
      </li>
      <li>
        <bodyPart>Eye</bodyPart>
		<chance>0.65</chance>
      </li>
	</missingParts>
    <xenotypeSet Inherit="False">
      <xenotypeChances>
        <Genie MayRequire="Ludeon.RimWorld.Biotech">0.025</Genie>
        <Neanderthal MayRequire="Ludeon.RimWorld.Biotech">0.025</Neanderthal>
        <Pigskin MayRequire="Ludeon.RimWorld.Biotech">0.025</Pigskin>
        <OldOne MayRequire="ellit.IlkoftheOldOnes">0.025</OldOne>
      </xenotypeChances>
    </xenotypeSet>
	<modExtensions>
	  <li Class="HVPAA.AddedSpecPsycasters">
		<domesticChance>1</domesticChance>
		<pointCost>30</pointCost>
		<domesticCount>1</domesticCount>
		<minPsylinkLevel>3~5</minPsylinkLevel>
		<bonusPsycasts>2</bonusPsycasts>
		<raidChance>0.1</raidChance>
		<raidCount>1</raidCount>
		<combatCastIntervalOverride>90</combatCastIntervalOverride>
	  </li>
	</modExtensions>
  </PawnKindDef>
  
</Defs>